<h1>Messages#index</h1>
<p><%= @msg %></p>
<a href="/messages/add">add</a>
<table>
	<tr>
		<th>M_Id</th><th >title</th><th>person_ID</th><th>name</th><th colspan="2"></th>
	</tr>
	<% @data.each do |obj| %>
	<tr>
		<td><%= obj.id %></td>
		<td><a href="/messages/<%= obj.id %>"><%= obj.title %></a></td>
		<td><%= obj.person_id %></td>
		<td><%= obj.person !=nil ? obj.person.name : '' %></td>
		<td><a href="/messages/edit/<%= obj.id %>">Edit</a></td>
		<td><a href="javascript:delData(<%= obj.id %>);">Delete</a></td>
	</tr>
	<% end %>
</table>
<script>
function delData(num){
	if (confirm('このデータを削除しますか？')){
		document.location = "/messages/delete/" + num;
	}
	return false;
}
</script>